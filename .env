# =============================================================================
# Trading symbols (Crypto pairs) to monitor
SYMBOLS=BTCUSDT,ETHUSDT,USDTUSDT

# Kafka configuration (Throughput testing)
KAFKA_PARTITIONS=4
CONSUMER_GROUP=crypto-consumer-group

# =============================================================================
# EVALUATION KNOBS 
# These knobs are in place for later performance metrics testing

# LATENCY TESTING
# Batch size: 1 = real-time, higher = batched processing
BATCH_SIZE=1

# Max records per poll 
MAX_POLL_RECORDS=500

# RESOURCE USAGE TESTING 
# Replay speed multiplier for stress testing, 1 = real-time, 5 = 5x faster
REPLAY_SPEED=1

# Kafka thread configuration
KAFKA_NUM_THREADS=3
KAFKA_IO_THREADS=8

# =============================================================================
# TESTING SCENARIOS

# Scenario 1: Baseline (1 symbol)
# SYMBOLS=BTCUSDT
# BATCH_SIZE=1
# KAFKA_PARTITIONS=1

# Scenario 2: Load Variation (3 symbols)
# SYMBOLS=BTCUSDT,ETHUSDT,USDTUSDT
# KAFKA_PARTITIONS=4

# Scenario 3: Batched Processing
# BATCH_SIZE=32

# Scenario 4: Stress Test
# REPLAY_SPEED=5